
@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<section class="vh-150" style="background-color: white;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">                     
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form id="account" method="post">
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: black">Sign into your account</h5>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="Input.Email" style="color: black">Email</label>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="Input.Password" style="color: black">Password</label>
                                        <input type="password" asp-for="Input.Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">
                                            
@*                                            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                                            {
                                               <a class="nav-link text-light" asp-area="" asp-controller="Admin">Login</a> 
                                            } else if(User.Identity.IsAuthenticated && User.IsInRole("Staff"))
                                            {
                                                <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="StoreOwner">Login</a> 

                                            } else
                                            {
                                                <a class="nav-link text-light" asp-area="" asp-controller="Book" >Login</a> 
                                            }*@
                                            Login
                                            </button>
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <a href="#!" class="small text-muted">Terms of use</a>
                                   
                                   
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
