@model Book_Store.Models.Book
@{
    Layout = "Homepage";
}


<link rel="stylesheet" href="{/css/Detail}">
<div class="preview_main">
    <div class="preview_content">
    
        <div class="preview_top">
            <div class="clear"></div>
        </div>
    </div>
    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <img style="height: 550px; width: 500px" src="@Model.BPicture">
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">@Model.BName</h3>
                        <h4 class="price">Price: <span>@Model.BPrice</span></h4>
                        <h4 class="price">Quantity: <span>@Model.BQuantity</span></h4>
                        <h4 class="price">Author: <span>@Model.BAuthor</span></h4>
                        <h4 class="price">Category: <span>@Model.Category.CatName</span></h4>
                        <p class="product-description">Description: @Model.BDescription</p>
                        <p class="Key">
                            <br>

                            <strong style="color: red;">
                                Notice: To avoid buying fake goods, poor quality goods, each of our products comes with
                                stamps on the cover page of the book. If you order online, please record the video when
                                opening the product and check the stamps of the goods on the book
                            </strong>
                        </p>
                        <div class="buy">
                            <form method="post" asp-controller="Order" asp-action="Order_Book">
                                <input type="hidden" name="id" value="@Model.Id">
                                <div class="form-group">
                                    <b><label for="formGroupExampleInput" style="font-family:'Rubik', sans-serif; font-size:15px;">Oder Quanyity: </label></b>
                                    <input type="number" name="quantity" min="1" max="@Model.BQuantity">
                                </div>
                                <input type="submit" class="btn btn-outline-info" value="Add to cart">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
